<Window x:Class="Delivery.View.EditClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delivery.View"
        mc:Ignorable="d"
        Title="Изменить клиента" Height="450" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="10, 0, 10, 10">
            
            <Label Content="Клиент" />
            <ComboBox ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}"/>

            <Label Content="Имя" />
            <TextBox Text="{Binding Firstname}" />

            <Label Content="Фамилия" />
            <TextBox Text="{Binding Lastname}" />

            <Label Content="Отчество" />
            <TextBox Text="{Binding Fathername}" />

            <Label Content="Телефон" />
            <TextBox Text="{Binding Phone}" />

            <Label Content="Email" />
            <TextBox Text="{Binding Email}" />

        </StackPanel>

        <Button Grid.Row="1" Content="Редактировать" Command="{Binding EditClientCommand}" />

    </Grid>
</Window>
